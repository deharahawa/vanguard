generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model DailyMetrics {
  id         String   @id @default(uuid())
  userId     String
  date       DateTime @default(now())
  hydration  Boolean  @default(false) // Deprecated/Legacy
  breathing  Boolean  @default(false)
  mobility   Boolean  @default(false) // Deprecated/Legacy
  reset      Boolean  @default(false)
  diplomat   Boolean  @default(false)
  bio_engine Boolean  @default(false) // New 4th Pillar
  mood       Int
  summary    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, date])
}

// ... (other models)

model BioMetric {
  id              String    @id @default(uuid())
  userId          String
  date            DateTime  @default(now())
  sleepStart      DateTime?
  sleepEnd        DateTime?
  sleepQuality    Int? // 1-5
  sleepHours      Float?    // Calculated/Input
  morningVitality Boolean?
  stoolType       Int? // Bristol 1-7
  stoolColor      String?
  stoolNotes      String?
  calories        Int?      // Daily cached total
  protein         Int?      // Daily cached total
  workoutType     String?   // e.g., "HYBRID", "LIFT"
  workoutVolume   Int?      // e.g., Total tonnage or duration
  supplementsTaken Boolean  @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([userId, date])
}

enum MealType {
  BREAKFAST
  LUNCH
  SNACK
  DINNER
}

model MealLog {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @default(now())
  type      MealType
  items     String[] // List of food items
  photoUrl  String?
  calories  Int?
  protein   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date, type])
}

model MentorBriefing {
  id            String   @id @default(uuid())
  userId        String
  content       String
  weekStartDate DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, weekStartDate])
}

model Perk {
  id          String     @id
  label       String
  category    String     // OPERATOR, STOIC, DIPLOMAT
  description String
  users       UserPerk[]
}

model UserPerk {
  id        String   @id @default(uuid())
  userId    String
  perkId    String
  perk      Perk     @relation(fields: [perkId], references: [id])
  xp        Int      @default(0)
  level     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, perkId])
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  codename  String?
  bio       String?
  protocolConfig Json? // Stores habit labels: { op1: "Hydrate", op2: "Mobility", ... }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OracleCard {
  id       String  @id @default(uuid())
  content  String
  author   String?
  category String  // STOIC | TACTICAL | MENTAL_MODEL
}

model BacklogItem {
  id        String   @id @default(uuid())
  userId    String
  content   String
  status    String   @default("PENDING") // PENDING | COMPLETED
  category    String   @default("GENERAL") // GENERAL, LEARNING, HEALTH, WORK
  operationId String?
  operation   Operation? @relation(fields: [operationId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DailyBriefing {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime
  wisdoms   Json
  missionId String?
  viewed    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
}

model SavedIntel {
  id           String   @id @default(uuid())
  userId       String
  cardId       String
  category     String
  title        String
  content      String
  referenceUrl String?
  color        String?
  createdAt    DateTime @default(now())

  @@unique([userId, cardId])
}

model DojoCard {
  id        String   @id @default(uuid())
  category  String   // STRATEGY, TECH, SOUL
  content   String   // The prompt/question
  createdAt DateTime @default(now())
}

model DojoEntry {
  id           String   @id @default(uuid())
  userId       String
  prompt       String
  userResponse String
  aiFeedback   String
  category     String
  createdAt    DateTime @default(now())
}

model Ally {
  id            String   @id @default(uuid())
  userId        String
  name          String
  role          String   // e.g., "Inner Circle", "Family", "Network"
  frequencyDays Int      // Ideal gap between contacts
  lastContact   DateTime
  contactMethod String?  // WhatsApp URL or Phone
  createdAt     DateTime @default(now())
}

model Operation {
  id        String        @id @default(uuid())
  userId    String
  title     String
  deadline  DateTime?
  status    String        @default("ACTIVE") // ACTIVE, COMPLETED
  createdAt DateTime      @default(now())
  tasks     BacklogItem[]
}

model Season {
  id           String   @id @default(uuid())
  userId       String
  name         String
  startDate    DateTime
  endDate      DateTime
  totalXP      Int
  rankAchieved String
  badges       Json     // Array of medals/badges
  createdAt    DateTime @default(now())
}

model DailyStreamCache {
  id         String   @id @default(uuid())
  userId     String
  date       DateTime
  batchIndex Int
  cards      Json     // Array of IntelCardData
  createdAt  DateTime @default(now())

  @@unique([userId, date, batchIndex])
}



model Meal {
  id         String        @id @default(uuid())
  userId     String
  name       String
  calories   Int
  protein    Float
  carbs      Float
  fat        Float
  isTemplate Boolean       @default(false)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  intakes    DailyIntake[]
}

model DailyIntake {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @default(now())
  mealId    String
  meal      Meal     @relation(fields: [mealId], references: [id])
  quantity  Float    @default(1.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkoutSession {
  id        String        @id @default(uuid())
  userId    String
  date      DateTime      @default(now())
  type      String // LIFT | CARDIO
  name      String?       // e.g. "Program A"
  isTemplate Boolean      @default(false)
  notes     String?
  imageUrl  String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  sets      ExerciseSet[]
}

model ExerciseSet {
  id        String         @id @default(uuid())
  sessionId String
  session   WorkoutSession @relation(fields: [sessionId], references: [id])
  name      String
  weight    Float
  reps      Int
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model OutputLog {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @default(now()) // Captures specific time
  stoolType Int // Bristol 1-7
  stoolColor String
  stoolNotes String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
}
